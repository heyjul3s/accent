html,
body
    min-height 100%


body
    padding-top 35px

    overflow-x hidden
    overflow-y scroll
    font-family base-font
    background-color body-bg
    color white

    +above(tablet-portrait)
        padding-top 90px

*
    box-sizing border-box;


ul,
ol
    list-style none

    li
        display inline-block


img
    max-width 100%;
    margin 0;
    vertical-align middle;


a
    text-decoration none

    &:focus,
    &:active
        outline none
        border none
        appearance none
        text-shadow none

p
    line-height 1.5

button
    display block
    width 100%
    padding 20px 25px
    font-size 16px
    outline none
    border none


.container
    position relative
    max-width 1200px
    min-height 100vh
    padding-left 20px
    padding-right 20px
    margin 0 auto

.layout
	display block
	position relative

header
	padding 0
	text-align center
	color white

	+above(768px)
		padding 0

	h1
		margin 0
		padding 0
		text-transform uppercacse
